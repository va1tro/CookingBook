<Page x:Class="CookingBook.Pages.Registration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CookingBook.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Registration">

    <Grid x:Name="Register" Margin="0,0,0,-17">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFED68DC"/>
                <GradientStop Color="#FF98ED7A" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button x:Name="btnReg" Content="Зарегистрироваться" HorizontalAlignment="Left" Margin="273,377,0,0" VerticalAlignment="Top" Width="264" RenderTransformOrigin="0.887,-0.509" Height="29" Click="btnReg_Click"/>
        <Button x:Name="btnBack" Content="Назад" HorizontalAlignment="Left" Margin="273,411,0,0" VerticalAlignment="Top" Width="264" Height="28" Click="btnBack_Click"/>
        <TextBox x:Name="tbLogin" HorizontalAlignment="Left" Margin="273,108,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="264"/>
        <PasswordBox x:Name="tbPass" HorizontalAlignment="Left" Margin="273,162,0,0" VerticalAlignment="Top" Width="264"/>
        <TextBox x:Name="txtLogin" HorizontalAlignment="Left" Margin="273,52,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="264" RenderTransformOrigin="0.484,-0.269"/>
        <TextBlock HorizontalAlignment="Left" Margin="277,31,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="ru-ru" Text="Введите имя автора:"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="277,87,0,0" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.785,-0.017"><Run Language="ru-ru" Text="Введите логин"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="277,141,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="ru-ru" Text="Введите пароль:"/></TextBlock>
        <TextBox x:Name="txtstazh" HorizontalAlignment="Left" Margin="417,263,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtmail" HorizontalAlignment="Left" Margin="273,310,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="264"/>
        <TextBox x:Name="txtphone" HorizontalAlignment="Left" Margin="273,354,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="264" TextChanged="TextBox_TextChanged"/>
        <PasswordBox x:Name="btnPassP" HorizontalAlignment="Left" Margin="273,211,0,0" VerticalAlignment="Top" Width="264"/>
        <DatePicker x:Name="dateB" HorizontalAlignment="Left" Margin="273,260,0,0" VerticalAlignment="Top" Width="132"/>
        <Label Content="Введите пароль повторно:" HorizontalAlignment="Left" Margin="273,185,0,0" VerticalAlignment="Top"/>
        <Label Content="Стаж:" HorizontalAlignment="Left" Margin="417,229,0,0" VerticalAlignment="Top"/>
        <Label Content="Дата рождения:" HorizontalAlignment="Left" Margin="277,229,0,0" VerticalAlignment="Top"/>
        <Label Content="Введите почту:" HorizontalAlignment="Left" Margin="277,284,0,0" VerticalAlignment="Top"/>
        <Label Content="Введите телефон:" HorizontalAlignment="Left" Margin="273,328,0,0" VerticalAlignment="Top"/>
        <Label Content="Регистрация" HorizontalAlignment="Left" Margin="362,2,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14"/>

    </Grid>
</Page>
